name: Update Homebrew Tap

on:
  release:
    types: [published]
  workflow_dispatch:  # Allow manual trigger

jobs:
  update-tap:
    runs-on: ubuntu-latest
    steps:
      - name: Get latest release tag
        id: get_tag
        run: |
          if [[ "${{ github.event_name }}" == "workflow_dispatch" ]]; then
            # Manual trigger: get latest release tag
            TAG=$(gh api repos/bgreenwell/xleak/releases/latest --jq '.tag_name')
            echo "Using latest release: $TAG"
          else
            # Release trigger: use the tag from the event
            TAG=${GITHUB_REF#refs/tags/}
            echo "Using release tag: $TAG"
          fi
          echo "tag=$TAG" >> $GITHUB_OUTPUT
        env:
          GH_TOKEN: ${{ github.token }}

      - name: Extract version
        id: version
        run: |
          TAG=${{ steps.get_tag.outputs.tag }}
          VERSION=${TAG#v}
          echo "version=$VERSION" >> $GITHUB_OUTPUT
          echo "tag=$TAG" >> $GITHUB_OUTPUT

      - name: Calculate SHA256
        id: sha
        run: |
          URL="https://github.com/bgreenwell/xleak/archive/refs/tags/${{ steps.version.outputs.tag }}.tar.gz"
          SHA=$(curl -sL "$URL" | shasum -a 256 | awk '{print $1}')
          echo "sha256=$SHA" >> $GITHUB_OUTPUT
          echo "Calculated SHA256: $SHA"

      - name: Checkout tap repository
        uses: actions/checkout@v4
        with:
          repository: bgreenwell/homebrew-xleak
          token: ${{ secrets.HOMEBREW_TAP_TOKEN }}
          path: homebrew-xleak

      - name: Update formula
        working-directory: homebrew-xleak
        run: |
          cat > Formula/xleak.rb <<'EOF'
          class Xleak < Formula
            desc "Terminal Excel viewer with interactive TUI, search, formulas, and export"
            homepage "https://github.com/bgreenwell/xleak"
            url "https://github.com/bgreenwell/xleak/archive/refs/tags/${{ steps.version.outputs.tag }}.tar.gz"
            sha256 "${{ steps.sha.outputs.sha256 }}"
            license "MIT"
            head "https://github.com/bgreenwell/xleak.git", branch: "main"

            depends_on "rust" => :build

            def install
              system "cargo", "install", *std_cargo_args
            end

            test do
              assert_match "xleak", shell_output("#{bin}/xleak --version")
            end
          end
          EOF

      - name: Commit and push
        working-directory: homebrew-xleak
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add Formula/xleak.rb
          git commit -m "Update xleak to ${{ steps.version.outputs.version }}" || echo "No changes to commit"
          git push
